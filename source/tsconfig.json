{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "build",
    "node_modules",
    "./typings/**",
    "./typings/globals/express-serve-static-core/**",
    "typings/globals/body-parser/index.d.ts",
    "typings/globals/core-js/index.d.ts",
    "typings/globals/express/index.d.ts",
    "./typings/globals/express-serve-static-core/index.d.ts",
    "typings/globals/jasmine/index.d.ts",
    "typings/globals/mime/index.d.ts",
    "./typings/globals/node/index.d.ts",
    "typings/globals/serve-static/index.d.ts",
    "typings/index.d.ts"
  ]
}